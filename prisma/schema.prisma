generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODELO PRODUCTO_COTIZACION (5) //
model Producto_Cotizacion {
  id              Int        @id @default(autoincrement())
  cotizacionId    Int
  cotizacion      Cotizacion @relation(fields: [cotizacionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productoId      Int?
  producto        Producto?  @relation(fields: [productoId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  cantidad        Int
  descripcion     String
  unidad          String
  precio_unitario Float
  importe         Float
}

// MODELO COTIZACION (4) //
model Cotizacion {
  id             Int                   @id @default(autoincrement())
  fechaCreacion  DateTime              @default(now())
  diasCotizacion Int
  clienteId      Int?
  cliente        Cliente?              @relation(fields: [clienteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  productos      Producto_Cotizacion[]
  total          Float?
  lugarDeEntrega String
}

// MODELO CLIENTE (3) //
model Cliente {
  id           Int          @id @default(autoincrement())
  nombre       String
  logo         String?
  correo       String       @unique
  telefono     String
  domicilio    String
  cotizaciones Cotizacion[]
}

// MODELO PRODUCTO (2) //
model Producto {
  id                  Int                   @id @default(autoincrement())
  descripcion         String
  unidad              String
  precio_unitario     Float
  modelo              String?
  categoria_Id        Int
  categoria           Categoria             @relation(fields: [categoria_Id], references: [id])
  productosCotizacion Producto_Cotizacion[]
}

// MODLEO CATEGORIA (1) //
model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String     @unique
  productos Producto[]
}
